           title="DataGrid - VirtualScrollView"
           data-options="view:scrollview,rownumbers:true,singleSelect:true,url:'@Url.Action("LoadCompanyList", "Company", new { area = "Contract" })',autoRowHeight:false,pageSize:50">
        <thead>
            <tr>
                <th field="id" width="80">id</th>
                <th field="uname" width="100">企业名称</th>
                <th field="setMan" width="80">法人</th>
            </tr>
        </thead>
    </table>*@

    <table id="tt" class="easyui-datagrid"></table>
</body>
</html>
